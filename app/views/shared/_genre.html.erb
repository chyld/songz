<div class='pill'>
  <div class='data'>
    <div class='name'><%= link_to genre.name, edit_genre_path(genre) %></div>
    <div class='artists'>
      Artists:
      <ul>
        <% genre.songs.map(&:artists).flatten.uniq.each do |artist| %>
          <li><%= link_to artist.name, artist %></li>
        <% end %>
      </ul>
    </div>
    <div class='albums'>
      Albums:
      <ul>
        <% genre.songs.map(&:albums).flatten.uniq.each do |album| %>
          <li><%= link_to album.name, album %></li>
        <% end %>
      </ul>
    </div>
    <div class='songs'>
      Songs:
      <ul>
        <% genre.songs.each do |song| %>
          <li><%= link_to song.name, song %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
