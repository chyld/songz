<div class='pill'>
  <div class='photo'><%= link_to image_tag(artist.photo.thumb.url), artist %></div>
  <div class='data'>
    <div class='name'><%= link_to artist.name, edit_artist_path(artist) %></div>
    <div class='albums'>
      Albums:
      <ul>
        <% artist.songs.map(&:albums).flatten.uniq.each do |album| %>
          <li><%= link_to album.name, album %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
