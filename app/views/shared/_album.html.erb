<div class='pill'>
  <div class='photo'><%= link_to image_tag(album.photo.thumb.url), album %></div>
  <div class='data'>
    <div class='name'><%= link_to album.name, edit_album_path(album) %></div>
    <div class='songs'>
      Songs:
      <ul>
        <% album.songs.each do |song| %>
          <li><%= link_to song.name, song %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
